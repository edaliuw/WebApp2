@model TourneyBracket.Models.BracketTable

@{
    ViewData["Title"] = "Create";
    ViewData["dt"] = DateTime.Now.ToString("yyyy-MM-dd HH:mm");

}

<h1>Create</h1>

<h4>Bracket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" value="1" asp-for="RoundFormat" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" value='@ViewData["dt"]' asp-for="CreatedAt" class="form-control" />
            </div>
            <div class="form-group">
               <input type="hidden" value="1" asp-for="Active" class="form-control" />
            </div>
            <div class="form-group">
                <select asp-for="TeamTotal" name="TeamTotal">
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="8">8</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
